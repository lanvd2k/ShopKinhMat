@model ShopBanDo.Models.modelProduct

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Chi tiết</h1>
                    </div>
                    <div class="col-6">
                        <div class="float-right pt-1">
                            <a href="@Url.Action("Index","Product")" class="btn btn-danger btn-sm"><i class="fas fa-arrow-circle-left"></i>Trở về</a>
                        </div>
                    </div>
                </div>

            </div><!-- /.container-fluid -->
        </section>
        <!-- Main content -->
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-9">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label>Tên loại sản phẩm</label>
                                <br />
                                @Html.Raw(Model.Name)
                            </div>
                            <div class="form-group">
                                <label>Từ khóa (CEO)</label>
                                <br />
                                @Html.Raw(Model.Metakey)
                            </div>

                            <div class="form-group">
                                <label>Mô tả(SEO)</label>
                                <br />
                                @Html.Raw(Model.Metadesc)
                            </div>
                            <div class="form-group">
                                <label>Chi tiết sản phẩm</label>
                                <br />
                                @{
                                    foreach (var i in Model.Detail.Split(new[] { '\n' }))
                                    {
                                        <small class="text-dark"> @i</small><br>

                                    }
                                }
                            </div>
                        </div>
                        <div class="col-md-3">
                            @*bên phải*@
                            <div class="form-group">
                                <label>Liên kết: </label>
                                <br />
                                @Html.Raw(Model.Slug)
                            </div>

                            <div class="form-group">
                                <label>Ngày tạo</label>
                                <br />
                                @Html.Raw(Model.Updated_at)
                            </div>
                            <div class="form-group">
                                <label>Người tạo</label>
                                <br />
                                @Html.Raw(Model.Updated_by)
                            </div>
                            <div class="form-group">
                                <label>Hình sản phẩm</label>
                                <img src="~/Public/Library/images/product/@Model.Img" alt="Alternate Text" width="100" class="d-block mx-auto" />
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
}