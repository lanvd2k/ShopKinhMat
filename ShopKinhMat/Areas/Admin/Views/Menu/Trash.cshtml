@model IEnumerable<ShopBanDo.Models.modelMenu>
@{
    ViewBag.Title = "Trash";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">

                <div class="col-sm-6">
                    <h1>Quản lý danh mục</h1>
                </div>
                <div class="col-sm-6">
                    @Html.Partial("_Message")
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="col-12">
            <!-- /.card -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-8">
                            Menu
                        </div>

                        <div class="col-4">
                            <div class="float-right pt-1">
                                <a href="@Url.Action("Index","Menu")" class="btn btn-sm btn-danger"><i class="fas fa-home"></i>Trở về</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    
                    <div class="col-12">
                        <table id="cate1" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="no-sort">Tên menu</th>
                                    <th class="no-sort">Liên kết</th>
                                    <th class="no-sort">Vị trí</th>
                                    <th class="no-sort text-center" style="width:10rem">Action</th>
                                    <th class="text-center no-sort" style="width:3rem;">ID</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                    <tr>
                        <td><a href="~/Admin/Menu/Details/@Html.DisplayFor(modelItem => item.Id)">@Html.DisplayFor(modelItem => item.Name)</a>  </td>
                        <td>  @Html.DisplayFor(modelItem => item.Link)</td>
                        <td>  @Html.DisplayFor(modelItem => item.Position)</td>
                        <td class="text-center">
                            
                            <button type="button" class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="top" title="Chỉnh sửa">
                                <a href="@Url.Action("ReTrash", "Menu", new { id = item.Id })" class="text-white"><i class="fas fa-undo"></i></a>
                            </button>
                            <button type="button" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="top" title="Xóa">
                                <a href="@Url.Action("Delete", "Menu", new { id = item.Id })" class="text-white"><i class="far fa-trash-alt"></i></a>
                            </button>
                        </td>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.Id)</td>
                    </tr>
}
                            </tbody>
                        </table>
                    </div>
                </div>


            </div>
            <!-- /.card -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>