@model IEnumerable<ShopBanDo.Models.modelPost>
@foreach (var row in Model)
{
    <div class="col-sm-6 col-md-4 p-b-40">
        <div class="blog-item">
            <div class="hov-img0">
                <a href="~/@row.Slug">
                    <img src="~/Public/Library/images/Post/@row.Img" alt="@row.Title" width="100px" height="280px">
                </a>
            </div>
            <div class="p-t-15">
                <div class="stext-107 flex-w p-b-14">
                    <span class="m-r-3">
                        <span class="cl4">
                            @String.Format("{0:d/M/yyyy HH:mm:ss}", row.Created_At);
                        </span>
                    </span>
                </div>

                <h4 class="p-b-12">
                    <a href="~/@row.Slug" class="mtext-101 cl2 hov-cl1 trans-04">
                        @row.Title
                    </a>
                </h4>
            </div>
        </div>
    </div>

}